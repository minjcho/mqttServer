{
  "name": "redis-sink-connector",
  "config": {
    "connector.class": "com.github.jcustenborder.kafka.connect.redis.RedisSinkConnector",
    "tasks.max": "1",
    "topics": "mqtt-messages",
    "redis.hosts": "redis:6379",
    "redis.database": "0",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.storage.StringConverter",
    "transforms": "extractMessage,filterCoordinates",
    "transforms.extractMessage.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.extractMessage.regex": ".*",
    "transforms.extractMessage.replacement": "message:mqtt-messages:$1",
    "transforms.filterCoordinates.type": "org.apache.kafka.connect.transforms.Filter$Value",
    "transforms.filterCoordinates.predicate": "hasCoords",
    "predicates": "hasCoords",
    "predicates.hasCoords.type": "org.apache.kafka.connect.transforms.predicates.RecordIsTombstone"
  }
}